{
  "name": "Hermit",
  "stack": "container",
  "env": {
    "SESSION_ID": {
      "description": "Unique session identifier",
      "required": true
    },
    "AUTO_STATUS_VIEW": {
      "description": "Enable or disable",
      "required": false
    },
    "ALWAYS_ONLINE": {
      "description": "Keep the app always online",
      "required": false
    },
    "PREFIX": {
      "description": "Handler path or module",
      "value": "."
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  }
}
